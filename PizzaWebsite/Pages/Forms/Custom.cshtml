 @page
@model CustomModel
@{
}

<div class="container text-center">
    <h1 class="text-capitalize">Create your own pizza</h1>
    <form method="post" class="mx-auto mt-5 mb-5 px-5 pt-5 rounded-5 bg-light col-4">
        <input type="text" asp-for="Pizza.PizzaName" placeholder="Give Your Pizza a Name"/>
        <br />
        <input type="checkbox"  asp-for="Pizza.TomatoSauce" placeholder="Tomato Sauce"/> Tomato Sauce
        <br />
        <input type="checkbox"  asp-for="Pizza.Chesee" placeholder="Chesee"/> Chesee
        <br />
        <input type="checkbox"  asp-for="Pizza.Paperoni" placeholder="Paperoni"/> Paperoni
        <br />
        <input type="checkbox"  asp-for="Pizza.Mashroom" placeholder="Mashroom"/> Mashroom
        <br />
        <input type="checkbox"  asp-for="Pizza.Tuna" placeholder="Tuna"/> Tuna
        <br />
        <input type="checkbox"  asp-for="Pizza.Beef" placeholder="Beef"/> Beef
        <br />
        <input type="checkbox"  asp-for="Pizza.Ham" placeholder="Ham"/> Ham
        <br />
        <button type="submit" class="btn btn-primary mt-1" >Order My Pizza</button>
    </form>
</div>