@page
@model PizzaWebsite.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Our great selection of pizzas</h1>
        <h4>Choose one or try our Pizza Builder! Then Order and Done</h4>
        <h4>No Need to give any details</h4>
        <h4>We already know everything!😅</h4>
        <p class="smallText">One pizza per order</p>

        <div class="container">
            <div class="row">
                <div class="col-12 mt-5 mb-5">
                    <div class="w-100 row MakeOwnDiv">
                        <div class="col-4">
                            <img src="~/Images/Pizzas/Create.png" class="w-100" />
                        </div>
                        <div class="col-8 align-items-center">
                            <div class="align-middle MakeOwnText">
                                <h3 style="text-align: left;">Create Your Own Pizza</h3>
                                <p style="text-align: left;">Make Your Own Pizza With Our PizzaMaker!</p>
                                <a class="btn btn-primary" style="float:left" asp-area="" asp-page="/Forms/Custom">Try Now!!</a>
                            </div>
                        </div>
                    </div>
                </div>
                @foreach (var pizza in Model.FakePizzaDB)
                {
                    var ImagePath = "~/Images/Pizzas/" + (pizza.ImageTitle + ".png");
                    <div class="col-4 mb-5">
                        <img src="@ImagePath" class="w-100" asp-append-version="true" />
                        <a class="btn btn-primary mt-1" asp-area="" asp-page="Checkout/Checkout" 
                        asp-route-ImageTitle="@pizza.ImageTitle"
                        asp-route-PizzaPrice="@pizza.FinalPrice"
                        >Get this Pizza!!!</a>
                        <br />
                    </div>
                }
            </div>
        </div>
    </div>
</div>
